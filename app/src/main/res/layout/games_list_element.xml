<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="game"
            type="rs.ac.ni.pmf.android.scoretracker2021.model.Game" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.teamA + ` - ` + game.teamB}"
            tools:text="Team A - Team B" />

        <TextView
            android:id="@+id/list_item_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.scoreA + ` : ` + game.scoreB}"
            tools:text="10 : 10" />
    </LinearLayout>
</layout>
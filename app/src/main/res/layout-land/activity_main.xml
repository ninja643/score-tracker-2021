<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_fragment_separator_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.fragment.app.FragmentContainerView
        android:name="rs.ac.ni.pmf.android.scoretracker2021.fragment.GamesListFragment"

        android:id="@+id/landscape_list_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_fragment_separator_guide" />

    <androidx.fragment.app.FragmentContainerView
        android:name="rs.ac.ni.pmf.android.scoretracker2021.fragment.GameDetailsFragment"

        android:id="@+id/landscape_details_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_constraintLeft_toLeftOf="@id/vertical_fragment_separator_guide"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>